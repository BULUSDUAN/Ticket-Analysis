<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_red_color">

    <com.standards.library.widget.ClickImageView
        android:id="@+id/title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="23px" />


    <TextView
        android:id="@+id/title_center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="wangwang"
        android:textColor="@color/white"
        android:textSize="46px" />

    <com.standards.library.widget.ClickImageView
        android:id="@+id/title_left"
        android:layout_width="26px"
        android:layout_height="42px"
        android:layout_alignParentTop="true"
        android:paddingLeft="23px"
        android:paddingRight="34px"
        android:src="@mipmap/ic_titlebar_narrow_left" />
</RelativeLayout>