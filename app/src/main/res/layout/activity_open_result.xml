<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:padding="30px"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvOpenSerial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="201705期开奖结果"
                android:textColor="@color/main_black_color_333333"
                android:textSize="44px" />


            <TextView
                android:id="@+id/tvOpenTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="09月07日（周四）开奖"
                android:textColor="@color/main_black_color_333333"
                android:textSize="44px" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvOpenResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120px"
            android:layout_marginRight="120px"
            android:layout_marginTop="40px"
            android:gravity="center_horizontal"
            android:text="10086"
            android:textColor="@color/main_normal_black_color"
            android:textSize="80px" />

        <View
            style="@style/divider_horizontal"
            android:layout_marginTop="40px" />

        <TextView
            android:id="@+id/tvHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:drawableRight="@mipmap/ic_narrow_right"
            android:gravity="center"
            android:padding="20px"
            android:text="查看历史开奖结果"
            android:textColor="@color/line_color_3954e4"
            android:textSize="44px" />

        <View style="@style/divider_horizontal" />
    </LinearLayout>
</LinearLayout>